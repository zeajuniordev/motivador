{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowS3ForPackaging",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:GetObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::motivador-sam-artifacts-433123236984",
        "arn:aws:s3:::motivador-sam-artifacts-433123236984/*"
      ]
    },
    {
      "Sid": "CloudFormationAndDeploy",
      "Effect": "Allow",
      "Action": [
        "cloudformation:*",
        "lambda:*",
        "apigateway:*",
        "dynamodb:*",
        "sqs:*",
        "ses:*",
        "secretsmanager:*",
        "logs:*",
        "events:*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowPassRole",
      "Effect": "Allow",
      "Action": [
        "iam:PassRole"
      ],
      "Resource": "*"
    }
  ]
}
